<article class="homepage">
  <section class="hero">
    <div class="grid-container">
        <div class="row text-row">
          <div class="col-8">
            <h2><%= I18n.t(:description) %></h2>
          </div>
        </div>
        <div class="row">
          <div class="shift-2 col-8">
            <div class="image">
              <iframe src="https://player.vimeo.com/video/228964697" width="640" height="360" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
            </div>
          </div>
        </div>
      </div>
      <a class="js-scroll-down-button scroll-down-button"><%= I18n.t(:how_it_works) %></a>
  </section>
  <section class="hero message">
    <div class="grid-container">
        <div class="row text-row">
          <div class="col-6">
            <h1><%= I18n.t(:ticker_title) %></h1>
          </div>
        </div>
        <div class="row">
          <div class="conversation-demo">
              <div class="bubble question" id="question-bubble">
                <div class="bubble-inner">
                  <h4>Question</h4>
                  <div class="text">I hope you've had a nice journey out today. How do you think people will travel in 10 years?</div>
                </div>
              </div>
              <div class="bubble answer" id="answer-bubble">
                <div class="bubble-inner">
                  <h4>Answer</h4>
                  <div class="text">Maybe driverless cars, maybe giant metal eagles with glowing eyes and side-mounted machineguns</div>
                </div>
                <div class="object-ref">Hockey and Tennis Centre #hatc</div>
              </div>
              <div class="buttons">
                <button class="new-question hidden" id="new-question-button">Next Question</button>
                <button class="next-answer hidden" id="next-answer-button">Next Answer</button>
            </div>
          </div>
        </div>
      </div>
  </section>
  <section id="how-it-works" class="process">
    <div class="grid-container">
      <div class="col-4">
        <div class="process-item">
          <div class="image-circle">
            <img src="/images/process-1.svg">
          </div>
          <h4><%= I18n.t(:pick_an_object) %></h4>
          <p><%= I18n.t(:pick_an_object_text) %></p>
        </div>
      </div>
      <div class="col-4">
        <div class="process-item">
          <div class="image-circle">
            <img src="/images/process-2.svg">
          </div>
          <h4><%= I18n.t(:say_hello) %></h4>
          <p><%= I18n.t(:say_hello_text) %></p>
        </div>
      </div>
      <div class="col-4">
        <div class="process-item">
          <div class="image-circle">
            <img src="/images/process-3.svg">
          </div>
          <h4><%= I18n.t(:keep_talking) %></h4>
          <p><%= I18n.t(:keep_talking_text) %></p>
        </div>
      </div>
    </div>
  </section>
